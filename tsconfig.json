{
  "compilerOptions": {
    "target": "es2019",
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
